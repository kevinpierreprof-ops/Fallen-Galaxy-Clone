# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port
PORT=3000

# Server host (use 0.0.0.0 for Docker, localhost for local development)
HOST=0.0.0.0

# Node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database path (use :memory: for in-memory database)
DATABASE_PATH=./data/space-strategy.db

# Enable verbose SQL logging (true/false)
DATABASE_VERBOSE=false

# MongoDB connection URI (legacy, if using MongoDB instead)
MONGODB_URI=mongodb://localhost:27017/space-strategy

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT secret key (CHANGE THIS IN PRODUCTION!)
# Generate a strong random key: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT expiration time (e.g., 7d, 24h, 30m)
JWT_EXPIRES_IN=7d

# Bcrypt salt rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=10

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed CORS origin for frontend
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=debug

# =============================================================================
# GAME CONFIGURATION
# =============================================================================

# Game update rate (updates per second)
GAME_UPDATE_RATE=30

# Maximum players per game
MAX_PLAYERS=100

# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================

# Socket.io ping timeout (ms)
SOCKET_PING_TIMEOUT=60000

# Socket.io ping interval (ms)
SOCKET_PING_INTERVAL=25000

