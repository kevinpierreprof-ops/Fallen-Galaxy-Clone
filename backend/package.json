{
  "name": "space-strategy-backend",
  "version": "1.0.0",
  "description": "Backend server for Space Strategy Game",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node -r ./dist/utils/module-alias.js dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:websocket": "jest --testPathPattern=websocket",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns=integration|websocket",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db": "ts-node -r tsconfig-paths/register src/database/cli.ts",
    "db:migrate": "npm run db migrate",
    "db:rollback": "npm run db rollback",
    "db:reset": "npm run db reset -- --force",
    "db:seed": "npm run db seed",
    "db:status": "npm run db status",
    "db:stats": "npm run db stats",
    "db:backup": "npm run db backup",
    "db:vacuum": "npm run db vacuum",
    "db:check": "npm run db check"
  },
  "keywords": ["game", "multiplayer", "strategy", "websocket"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "module-alias": "^2.2.3",
    "better-sqlite3": "^9.2.2",
    "commander": "^11.1.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/better-sqlite3": "^7.6.8",
    "@types/commander": "^2.12.2",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "tsconfig-paths": "^4.2.0"
  }
}

